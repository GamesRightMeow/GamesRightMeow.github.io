<body class="text-grm-white bg-grm-black p-x">
  <div class="flex flex-col h-screen">
    
    <!-- header -->
    <div class="flex flex-col items-center">
      <!-- logo -->
      <div class="text-center">
        <a href="/"><img src="/media/grm-header.png"/></a>
      </div>

      <!-- navigation -->
      <div class="mt-4 w-full md:w-192 bg-grm-white">
        <nav class="flex justify-center">
          <div class="flex space-x-4 justify-center">
            {% for item in settings.navigation %}
            <a class="text-grm-black hover:text-grm-red text-xl font-semibold lowercase" href="{{ item.url }}">{{ item.name }}</a>
            {% endfor %}
          </div>
        </nav>
      </div>
    </div>

    <!-- main content -->
    <div class="mb-auto pt-8">
      {{ content }}
    </div>

    <!-- footer -->
    <div class="flex flex-col items-center text-gray-500">
      <div class="flex flex-col justify-center p-2">
