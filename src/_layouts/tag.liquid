---
layout: main
---
<div class="flex justify-center">
  <div class="pt-4 flex flex-col w-64 md:w-128">
    <header class="text-custom-white text-4xl leading-6 font-black align-middle uppercase">
      {{ tag }}
    </header>

    <!-- TODO: tag descriptor? -->

    <main>
      {%- for post in collections[tag] -%}
      <article class="flex space-x-2">
        <div class="flex flex-col">
          <div class="text-gray-500 translate-y-2 text-sm font-normal uppercase text-center">{{ post.date | formatDate: "MMM" }}</div>
          <div class="h-8 tracking-tighter -translate-y-1 text-3xl font-normal text-center">{{ post.date | formatDate: "DD" }}</div>
          <div class="text-gray-500 -translate-y-1 tracking-tighter text-base font-normal text-center">{{ post.date | formatDate: "YYYY" }}</div>
        </div>

        <div class="p-2 flex flex-col justify-center w-64 md:w-128">
          <div class="text-2xl md:text-2xl leading-8 font-black align-middle uppercase">
            <a class="text-custom-link hover:bg-gray-800" href="{{ post.url }}">
              {{ post.data.title }}
            </a>
          </div>
          <div class="truncate whitespace-nowrap text-sm md:text-base font-normal -translate-y-1">{{ post.data.subtitle }}</div>
        </div>
      </article>
    </main>
    {%- endfor -%}
  </div>
</div>