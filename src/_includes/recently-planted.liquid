<div class="flex flex-col gap-2">
  {% for page in collections.recentlyPlanted limit:count %}
  <div class="flex flex-col sm:flex-row sm:gap-2 flex-wrap">
    <a href="{{page.url}}" >{{ page.data.status | prettyStatusIcon }} {{ page.data.title }}</a>
    <span class="flex">({% render "time-since" date: page.data.planted %})</span>
  </div>
  {% endfor %}
</div>